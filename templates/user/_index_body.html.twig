<div class="col-md-7 row">
    <div class="col-md-12">
        <div class="col-md-12">
            <h3>Lista</h3>
        </div>
        <div class="col-md-12">
            <table id="tabledynamic" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">Email</th>
                    <th scope="col">Data założenia konta</th>
                    <th scope="col">Zweryfikowany</th>
                    <th scope="col">Role</th>
                    <th scope="col">Edytuj</th>
                    <th scope="col">Usuń</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.creationDate ? user.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ user.isVerified ? 'Tak' : 'Nie' }}</td>
                        <td class="dropright">
                            {% if user.roles is not empty %}
                                <button class="btn btn-primary dropdown-toggle px-3 btn-sm" type="button"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Lista
                                </button>
                                <div class="dropdown-menu">
                                    <table class="table table-sm">
                                        <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Nazwa</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for key, role in user.roles %}
                                            <tr>
                                                <td><a class="dropdown-item" href="#">{{ key }}</a></td>
                                                <td><a class="dropdown-item" href="#">{{ role }}</a></td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <span>Brak</span>
                            {% endif %}
                        </td>
                        <td><a  class="btn btn-primary dropdown-toggle px-3 btn-sm" href="{{ path('app_user_edit', {'id': user.id}) }}">Edytuj</a></td>
                        <td><a  class="btn btn-primary dropdown-toggle px-3 btn-sm" href="{{ path('app_user_delete', {'id': user.id}) }}">Usuń</a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Brak Użytkowników</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
</div>